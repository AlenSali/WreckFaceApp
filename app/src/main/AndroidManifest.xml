<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alensalihbasic.wreckfacejavacv">

    <!--Allow to use a camera-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>
    <!--Allow to use storage-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppFullScreenTheme"
        android:largeHeap="true">
        <activity android:name=".WelcomeScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GenderRecognizer"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".AgeRecognizer"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".FaceRecognizerActivity"
            android:screenOrientation="landscape">
        </activity>
        <!--<activity android:name=".TrainingInfo"
            android:screenOrientation="portrait">
        </activity>-->
        <activity android:name=".TrainActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>